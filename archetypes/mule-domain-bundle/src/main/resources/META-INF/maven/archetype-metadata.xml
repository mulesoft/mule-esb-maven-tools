<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
                      name="maven-archetype-mule-domain"
                      xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <requiredProperties>
        <requiredProperty key="EE">
            <defaultValue>false</defaultValue>
        </requiredProperty>
    </requiredProperties>
    <modules>
        <module id="domain" dir="domain" name="domain">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/domain</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/resources</directory>
                </fileSet>
            </fileSets>
        </module>
        <module id="apps" dir="apps" name="apps"/>
        <module id="domain-bundle" dir="domain-bundle" name="domain-bundle"/>
    </modules>
</archetype-descriptor>
