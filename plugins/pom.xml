    <name>Mule ESB Maven Plugins</name>

    <artifactId>mule-esb-maven-plugins</artifactId>
    <packaging>pom</packaging>

    <properties>
        <license.path>../LICENSE_HEADER</license.path>
    </properties>

    <modules>
        <module>mule-app-maven-plugin</module>
        <module>mule-domain-maven-plugin</module>
    </modules>

<build>
<plugins>
        <!--Stam-->
        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
