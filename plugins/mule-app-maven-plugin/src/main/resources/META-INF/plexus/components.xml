<component-set>
    <components>
        <component>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>mule</role-hint>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <phases>
                            <validate>
                                org.mule.tools.maven:mule-app-maven-plugin:attach-test-resources
                            </validate>
                            <process-resources>
                                org.apache.maven.plugins:maven-resources-plugin:resources,
                                org.mule.tools.maven:mule-app-maven-plugin:filter-resources,
                                org.mule.tools.maven:mule-app-maven-plugin:process-resources
                            </process-resources>
                            <compile>
                                org.apache.maven.plugins:maven-compiler-plugin:compile
                            </compile>
                            <process-test-resources>
                                org.apache.maven.plugins:maven-resources-plugin:testResources
                            </process-test-resources>
                            <test-compile>
                                org.apache.maven.plugins:maven-compiler-plugin:testCompile
                            </test-compile>
                            <test>
                                org.apache.maven.plugins:maven-surefire-plugin:test
                            </test>
                            <package>
                                org.mule.tools.maven:mule-app-maven-plugin:mule
                            </package>
                            <install>
                                org.apache.maven.plugins:maven-install-plugin:2.5.2:install,
                                org.mule.tools.maven:mule-app-maven-plugin:install
                            </install>
                            <deploy>
                                org.apache.maven.plugins:maven-deploy-plugin:2.8.2:deploy
                            </deploy>
                        </phases>
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
        <component>
            <role>org.mule.tools.maven.plugin.app.cloudhub.CloudHubAdapter</role>
            <implementation>org.mule.tools.maven.plugin.app.cloudhub.DefaultCloudHubAdapter</implementation>
        </component>

        <!-- let maven plugins know that a mule project is a java project -->
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>mule</role-hint>
            <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
            <configuration>
                <type>mule</type>
                <language>java</language>
                <addedToClasspath>true</addedToClasspath>
            </configuration>
        </component>

    </components>

</component-set>

